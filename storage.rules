rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Função para verificar se é o Administrador
    function isAdmin() {
      return request.auth.token.email == 'zexnet.info@gmail.com';
    }

    // Regras para a pasta de Dispositivos
    // Apenas o dono da pasta (userId) pode escrever e ler, ou o Admin
    match /devices/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && (request.auth.uid == userId || isAdmin());
    }
  }
}
